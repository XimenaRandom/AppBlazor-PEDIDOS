
@page "/formempleado"

@inject NavigationManager navigationManager
@inject EmpleadoService empleadoService


<button @onclick="nuevo" class="btn btn-primary">Nuevo</button>

@if (lista != null && lista.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Num_Empleado</th> 
                <th>Nombre_Completo</th>
                <th>Edad</th>
                <th>Cargo</th>
                <th>Fecha Contrato</th>
                <th>Cuota</th>
                <th>Ventas</th>
                <th>Nombre Sucursal</th>
                <th>Nombre Director</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.Num_Empleado</td>
                    <td>@item.Nombre_Completo</td>
                    <td>@item.Edad</td>
                    <td>@item.Cargo</td>
                    <td>@item.FechaContrato</td>
                    <td>@item.Cuota</td>
                    <td>@item.Ventas</td>
                    <td>@item.nombretipodepartamento</td>
                    <td>@item.nombretipodirector</td>

                    <td>
                        <button class="btn btn-primary" @onclick="(() => recuperarEmpleado(item.Num_Empleado))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
                            </svg>
                        </button>
                        <button class="btn btn-danger" @onclick="(() => eliminarEmpleado(item.Num_Empleado))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private void nuevo()
    {
        navigationManager.NavigateTo("/formventa");
    }
    public List<EmpleadoList> lista { get; set; } = new List<EmpleadoList>();
    protected override Task OnInitializedAsync()
    {
        lista = empleadoService.listarempleados();
        return base.OnInitializedAsync();
    }
    private void listarEmpleados()
    {
        lista = empleadoService.listarempleados(); 
    }

    private void recuperarEmpleado(int Num_Empleado)
    {
        navigationManager.NavigateTo("/formempleado/edit/" + Num_Empleado);
    }

    private void eliminarEmpleado(int Num_Empleado)
    {
        empleadoService.eliminarEmpleado(Num_Empleado);
        listarEmpleados();
    }
}
